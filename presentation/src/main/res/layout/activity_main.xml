<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.presentation.activity.MainActivity">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000님의 BMI 지수"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.2"/>

    <TextView
        android:id="@+id/bmi_figure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MBI 10.00"
        android:textSize="32sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="@+id/user_name" />

    <Button
        android:id="@+id/more_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자세히 보기"
        app:layout_constraintTop_toTopOf="@+id/bmi_figure"
        app:layout_constraintBottom_toBottomOf="@+id/bmi_figure"
        app:layout_constraintStart_toEndOf="@+id/bmi_figure"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/bmi_short_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간단 정보"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmi_figure" />

</androidx.constraintlayout.widget.ConstraintLayout>